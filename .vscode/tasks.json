{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "echoCommand": true,
    "tasks": [
        {
            "label": "Build (dev)",
            "command": "${workspaceFolder}/node_modules/.bin/webpack",
            "windows": {
                "command": "${workspaceFolder}/node_modules/.bin/webpack.cmd",
            },
            "args": [
                "--display-modules",
                "--progress",
                "--watch",
                "-d",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build (dist)",
            "command": "${workspaceFolder}/node_modules/.bin/webpack",
            "windows": {
                "command": "${workspaceFolder}/node_modules/.bin/webpack.cmd",
            },
            "args": [
                "--display-modules",
                "--progress",
                "-d",
            ],
        }
    ]
}